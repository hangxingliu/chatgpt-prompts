{
  "manifest_version": 3,
  "name": "ChatGPT Prompts",
  "version": "1.2.1",
  "action": {
    "default_title": "ChatGPT Prompts",
    "default_popup": "pages/popup/index.html"
  },
  "background": {
    "service_worker": "background/index.js",
    "type": "module"
  },
  "description": "A prompts helper for ChatGPT",
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "permissions": [
    "tabs",
    "webRequest",
    "scripting",
    "downloads"
  ],
  "host_permissions": [
    "https://chat.openai.com/*"
  ]
}
